doctype html
html
  head
    title Login | MiniBlog
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css")
    style.
      body {
        background: #f2f6fc;
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100vh;
      }
      .login-card {
        max-width: 400px;
        width: 100%;
        background: white;
        border-radius: 1rem;
        box-shadow: 0 4px 16px rgba(0,0,0,0.1);
        padding: 2rem;
      }

  body
    .login-card
      h2.text-center.mb-4 Login to MiniBlog

      if info
        .alert.alert-success.text-center= info

      if warn
        .alert.alert-warning.text-center= warn

      form(method="post")
        .mb-3
          label.form-label(for="username") Username
          input#username.form-control(type="text", name="username", placeholder="Enter username", value="demo", required)
        .mb-3
          label.form-label(for="password") Password
          input#password.form-control(type="password", name="password", value="demo", required)
        button.btn.btn-primary.w-100(type="submit") Login

      p.text-center.mt-3.text-muted You can use "demo" / "demo" for testing.
